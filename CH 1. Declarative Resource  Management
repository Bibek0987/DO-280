# oc create svc clusterip demo-app --tcp=8080:8080 --dry-run=client -oyaml
         {{ oc create svc clusterip demo-app --tcp=8080:8080 --dry-run=client -oyaml > service.yaml }}
# oc delete ns bubu
# vi service.yaml 
=>
{{ apiVersion: v1
kind: Service
metadata:
  creationTimestamp: null
  labels:
    app: demo-app
  name: demo-app
  namespace: bubu
spec:
  ports:
  - name: 8080-8080
    port: 8080
    protocol: TCP
    targetPort: 8080
  selector:
    app: demo-app
  type: ClusterIP
status:
  loadBalancer: {}   }}}

